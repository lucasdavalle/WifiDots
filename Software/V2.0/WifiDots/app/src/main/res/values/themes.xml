    <style name="Theme.SafeSporting" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/grey_500</item>
        <item name="colorPrimaryVariant">@color/grey_200</item>
        <item name="colorOnPrimary">@color/grey_100</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/cian_200</item>
        <item name="colorSecondaryVariant">@color/grey_200</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/grey_200</item>
        <!-- Customize your theme here. -->
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
</resources>