<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="rectangle">
            <stroke android:color="#33202020"
                android:width="2dp"
                ></stroke>
            <solid android:color="#CC71A1FF"></solid>
            <corners android:radius="200dp"></corners>
        </shape>
    </item>
    <item android:state_checked="false">
        <shape android:shape="rectangle">
            <stroke android:color="#66202020"
                    android:width="2dp"
                ></stroke>
            <solid android:color="#0C5A5A5A"></solid>
            <corners android:radius="200dp"></corners>
        </shape>
    </item>
</selector>