<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/ic_squarewhite_padding20"
    android:orientation="vertical">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        android:paddingBottom="10dp"
        android:text="ALERTA"
        android:textColor="#F84646"
        android:textSize="30dp" />

    <TextView
        android:id="@+id/tvAletText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text="Esta a punto de eliminar y desvicular un Dot, con esta decision tambien se eliminara cualquier programacion en El"
        android:textSize="15dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:fontFamily="@font/open_sans_semibold"
        android:gravity="center"
        android:text=""
        android:textSize="5dp" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnAceptar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginEnd="60dp"
            android:background="@drawable/ic_squarecian"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Aceptar"
            android:textSize="12dp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnCancelar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:background="@drawable/ic_squarecian"
            android:fontFamily="@font/open_sans_semibold"
            android:text="Cancelar"
            android:textSize="12dp" />

    </LinearLayout>

</LinearLayout>